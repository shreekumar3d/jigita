    ref_map, fp_map, mh_map = get_ref_info(board.Footprints(), args.pcb_footprints)

if args.genconfig:
    jigconfig.generate_config(args.genconfig, ref_map, fp_map)
    print(f'Generated : %{args.genconfig}')
    sys.exit(0)

jigconfig.load_user_config(APP_NAME)

try:
